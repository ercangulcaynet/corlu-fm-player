# Güvenlik Başlıkları
<IfModule mod_headers.c>
    # Content Type koruması
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking koruması
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS koruması
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP Güvenlik (opsiyonel)
# PHP dosyasına erişimi sınırlayabilirsin
<FilesMatch "\.php$">
    # Yetkisiz erişim engellenebilir
    # Referrer kontrolü için gerekirse açılabilir
</FilesMatch>
